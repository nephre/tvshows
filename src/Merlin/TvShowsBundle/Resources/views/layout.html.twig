<!DOCTYPE html>
<html lang="en">
<head>
{% block head %}
    <title>TV Shows Manager :: {% block title %}{% endblock %}</title>

    <link rel="icon" sizes="16x16" href="{{ asset('favicon.ico') }}" />
{% stylesheets '@bootstrap_css' combine=false %}
    <link type="text/css" href="{{ asset_url }}" rel="stylesheet" media="screen" />
{% endstylesheets %}

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="" />
    <meta name="description" content="" />
{% endblock %}
</head>

<body>
{% block body %}
    <div class="container">
        <nav class="navbar navbar-default navbar-inverse" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">TV Shows Manager</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">Shows</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/shows/add">Add show</a></li>
                            <li><a href="/shows/remove">Remove show</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>

        <div id="content">
        {% block content %}
        <h1>Hello, world!</h1>
        {% endblock %}
        </div>
    </div>
{% endblock %}

{% javascripts '@jquery_js' '@bootstrap_js' combine=false %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
{% endjavascripts%}
</body>
</html>
