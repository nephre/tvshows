{% extends 'MerlinTvShowsBundle::layout.html.twig' %}
{% block title %}Add new show{% endblock %}
{% block javascript %}
{% javascripts '@add_show_js' combine=false %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}
{% block content %}
    {% block validation %}{% endblock %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Add new TV series you watch</h3>
        </div>
        <div class="panel-body">
            {{ form_start(form, {'action': path('shows_add'), 'method': 'POST', 'attr': {'role': 'form', 'class': 'form-horizontal'}}) }}
                <div class="form-group">
                    {{ form_label(form.title, 'Title', { 'label_attr': { 'class': 'col-md-1 col-xs-2 control-label' }}) }}
                    <div class="col-md-3 col-xs-6">
                        {{ form_widget(form.title, { 'attr': { 'class': 'form-control' }}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.season, 'Season', { 'label_attr': { 'class': 'col-md-1 col-xs-2 control-label' }}) }}
                    <div class="col-md-1 col-xs-2">
                        {{ form_widget(form.season, { 'attr': { 'class': 'form-control' }}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.season, 'Episode', { 'label_attr': { 'class': 'col-md-1 col-xs-2 control-label' }}) }}
                    <div class="col-md-1 col-xs-2">
                        {{ form_widget(form.episode, { 'attr': { 'class': 'form-control' }}) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-1 col-md-2">
                        <button type="submit" class="btn btn-primary">Add</button>
                        <button id="clearSearch" type="clear" class="btn btn-default">Clear</button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
